<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="asepg15.umkc.edu.tourlogger.RegisterActivity"
    android:background="@drawable/blur"
   >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/firstName"
        android:textColorHint="#ff240b1c"
        android:hint="First Name"
        android:layout_above="@+id/lastName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/lastName"
        android:textColorHint="#ff240b1c"
        android:hint="Last Name"
        android:layout_above="@+id/phnumber"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/phnumber"
        android:textColorHint="#ff240b1c"
        android:hint="Mobile Number"
        android:layout_above="@+id/email"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/email"
        android:textColorHint="#ff240b1c"
        android:hint="Email Address"
        android:layout_above="@+id/password"
      />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/password"
        android:textColorHint="#ff240b1c"
        android:hint="Password"
        android:layout_above="@+id/reenterPassword"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/reenterPassword"
        android:textColorHint="#ff240b1c"
        android:hint="Re-enter Password"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@drawable/button"
        android:id="@+id/previous"
        android:layout_below="@+id/reenterPassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/button"
        android:id="@+id/register"
        android:layout_alignTop="@+id/previous"
        android:layout_alignRight="@+id/reenterPassword"
        android:layout_alignEnd="@+id/reenterPassword" />

</RelativeLayout>
